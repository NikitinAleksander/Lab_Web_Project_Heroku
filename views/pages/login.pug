doctype html
html(lang='ru')
    head
        include _head
        include _scripts
    body
        block content
            .container
                .row.mt-50
                    .col-md-offset-3.col-md-6
                    .tab(role="tabpanel")
                        //  Nav tabs 
                        ul.nav.nav-tabs(role="tablist")
                        li.active(role="presentation")
                            a(href="#Section1", aria-controls="home", role="tab", data-toggle="tab") sign in
                        li(role="presentation")
                            a(href="#Section2", aria-controls="profile", role="tab", data-toggle="tab") sign up
                        //  Tab panes 
                        .tab-content.tabs
                        .tab-pane.fade.in.active#Section1(role="tabpanel")
                            form.form-horizontal
                            .form-group
                                label(for="InputEmail") username
                                input.form-control#InputEmail(type="email")
                            .form-group
                                label(for="InputPassword") Password
                                input.form-control#InputPassword(type="password")
                            .form-group
                                button.btn.btn-default(type="submit") Sign in
                        .tab-pane.fade#Section2(role="tabpanel")
                            form.form-horizontal
                            .form-group
                                label(for="InputUserName") UserName
                                input.form-control#InputUserName(type="text")
                            .form-group
                                label(for="InputEmail") Email address
                                input.form-control#InputEmail(type="email")
                            .form-group
                                label(for="InputPassword") Password
                                input.form-control#InputPassword(type="password")
                            .form-group
                                button.btn.btn-default(type="submit") Sign up

         include _footer